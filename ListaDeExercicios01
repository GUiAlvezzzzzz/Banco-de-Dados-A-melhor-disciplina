SELECT titulo FROM livros; 

SELECT nome FROM autores WHERE data_nascimento < '1900-01-01';

SELECT titulo FROM livros WHERE autor_id = (SELECT id FROM autores WHERE nome = 'J.K. Rowling');

SELECT nome FROM alunos WHERE curso_id = (SELECT id FROM cursos WHERE nome = 'Engenharia de Software');

SELECT produto, SUM(receita) AS receita_total FROM transacoes GROUP BY produto;

SELECT autores.nome AS autor, COUNT(livros.id) AS total_livros
FROM autores
LEFT JOIN livros ON autores.id = livros.autor_id
GROUP BY autores.nome;

SELECT cursos.nome AS curso, COUNT(alunos.id) AS total_alunos
FROM cursos
LEFT JOIN alunos ON cursos.id = alunos.curso_id
GROUP BY cursos.nome;

SELECT produto, AVG(receita) AS media_receita FROM transacoes GROUP BY produto;

SELECT produto, SUM(receita) AS receita_total
FROM transacoes
GROUP BY produto
HAVING SUM(receita) > 10000;

SELECT autores.nome AS autor, COUNT(livros.id) AS total_livros
FROM autores
LEFT JOIN livros ON autores.id = livros.autor_id
GROUP BY autores.nome
HAVING COUNT(livros.id) > 2;

SELECT livros.titulo AS livro, autores.nome AS autor
FROM livros
INNER JOIN autores ON livros.autor_id = autores.id;

SELECT alunos.nome AS aluno, cursos.nome AS curso
FROM alunos
LEFT JOIN matriculas ON alunos.id = matriculas.aluno_id
LEFT JOIN cursos ON matriculas.curso_id = cursos.id;

SELECT autores.nome AS autor, livros.titulo AS livro
FROM autores
LEFT JOIN livros ON autores.id = livros.autor_id;

SELECT cursos.nome AS curso, alunos.nome AS aluno
FROM cursos
RIGHT JOIN matriculas ON cursos.id = matriculas.curso_id
RIGHT JOIN alunos ON matriculas.aluno_id = alunos.id;


